<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with dark mode -->
    <style name="Theme.TVScreensaver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_gradient_start</item>
        <item name="colorPrimaryVariant">@color/primary_gradient_end</item>
        <item name="colorOnPrimary">@color/text_high_emphasis</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/primary_gradient_end</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_high_emphasis</item>
        <item name="colorOnSurface">@color/text_high_emphasis</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_high_emphasis</item>
        <item name="android:textColorSecondary">@color/text_medium_emphasis</item>
        <!-- Control colors -->
        <item name="colorControlNormal">@color/cloud_grey</item>
        <item name="colorControlActivated">@color/primary_gradient_start</item>
        <item name="colorControlHighlight">@color/secondary_blue</item>
        <!-- Radio button and checkbox colors -->
        <item name="android:buttonTint">@color/secondary_blue</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.Glance.Display1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Glance.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>        <!-- Medium weight -->
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Glance.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Glance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Glance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/cloud_grey</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Glance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>        <!-- Medium weight -->
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
