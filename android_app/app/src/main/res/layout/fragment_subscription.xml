<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="32dp" android:background="@color/background_dark" android:focusable="true">

    <TextView android:id="@+id/subscriptionTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Premium Subscription" android:textAppearance="@style/TextAppearance.Glance.Headline1" android:layout_marginBottom="16dp" android:gravity="center"/>

    <TextView android:id="@+id/subscriptionDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Upgrade to Premium to remove all ads and enjoy an uninterrupted screensaver experience." android:textAppearance="@style/TextAppearance.Glance.Body1" android:layout_marginBottom="32dp" android:gravity="center"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="32dp" android:background="@drawable/bg_card_outlined" android:padding="24dp">
        <TextView android:id="@+id/premiumBenefitsTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Premium Benefits:" android:textAppearance="@style/TextAppearance.Glance.Headline2" android:layout_marginBottom="16dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="✓ Ad-free experience" android:textAppearance="@style/TextAppearance.Glance.Body1" android:layout_marginBottom="8dp" android:textColor="@color/sun_yellow"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="✓ Unlimited wallpapers" android:textAppearance="@style/TextAppearance.Glance.Body1" android:layout_marginBottom="8dp" android:textColor="@color/sun_yellow"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="✓ Priority support" android:textAppearance="@style/TextAppearance.Glance.Body1" android:layout_marginBottom="8dp" android:textColor="@color/sun_yellow"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="✓ Support development" android:textAppearance="@style/TextAppearance.Glance.Body1" android:textColor="@color/sun_yellow"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:id="@+id/subscriptionStatusText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Current Status: Free" android:textAppearance="@style/TextAppearance.Glance.Body1" android:layout_marginBottom="24dp" android:gravity="center"/>

    <LinearLayout android:id="@+id/subscriptionOptionsContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="16dp">
        <Button android:id="@+id/btnSubscribeMonthly" android:layout_width="match_parent" android:layout_height="64dp" android:text="UPGRADE NOW - $2.99/month" android:textAppearance="@style/TextAppearance.Glance.Button" android:background="@drawable/btn_primary_background" android:textColor="@color/text_high_emphasis" android:layout_marginBottom="12dp" android:focusable="true" android:nextFocusDown="@id/btnSubscribeYearly" app:backgroundTint="@null"/>

        <Button android:id="@+id/btnSubscribeYearly" android:layout_width="match_parent" android:layout_height="56dp" android:text="Subscribe Yearly - $24.99/year (Save 30%)" android:textAppearance="@style/TextAppearance.Glance.Button" android:background="@drawable/btn_primary_background" android:textColor="@color/text_high_emphasis" android:focusable="true" android:nextFocusUp="@id/btnSubscribeMonthly" app:backgroundTint="@null"/>
    </LinearLayout>

    <TextView android:id="@+id/subscriptionNote" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Subscription will auto-renew unless cancelled. Manage your subscription in Google Play Store." android:textAppearance="@style/TextAppearance.Glance.Body2" android:alpha="0.7" android:gravity="center"/>

</LinearLayout>
