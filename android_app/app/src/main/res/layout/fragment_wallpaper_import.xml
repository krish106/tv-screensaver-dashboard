<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/background_dark" android:padding="32dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:text="Import Wallpapers" android:textAppearance="@style/TextAppearance.Glance.Headline1" />

        <!-- Import Buttons Section -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/bg_card_outlined" android:layout_marginBottom="24dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Import from Device" android:textAppearance="@style/TextAppearance.Glance.Headline2" />

            <Button android:id="@+id/btnImport" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:background="@drawable/btn_orange_selector" android:text="ðŸ“· Import Single Photo" android:textColor="@color/btn_text_color_selector" />

            <Button android:id="@+id/btnImportVideo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:background="@drawable/btn_orange_selector" android:text="ðŸŽ¥ Import Video" android:textColor="@color/btn_text_color_selector" />

            <Button android:id="@+id/btnSelectFolder" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/btn_orange_selector" android:text="ðŸ“ Select Folder (Import All Photos)" android:textColor="@color/btn_text_color_selector" />
        </LinearLayout>

        <!-- Web Upload Section -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/bg_card_outlined" android:layout_marginBottom="24dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Web Upload" android:textAppearance="@style/TextAppearance.Glance.Headline2" />

            <TextView android:id="@+id/tvInstructions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="To upload wallpapers, visit http://0.0.0.0:8080 on your phone." android:textColor="@color/sun_yellow" android:textSize="14sp" />

            <ImageView android:id="@+id/ivQrCode" android:layout_width="200dp" android:layout_height="200dp" android:layout_gravity="center" android:layout_marginBottom="16dp" android:background="@android:color/white" android:padding="8dp" android:scaleType="fitCenter" android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
