<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" android:background="@color/background_dark">

    <!-- Left Sidebar -->
    <ScrollView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.3" android:background="@color/surface_dark" android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingTop="32dp" android:paddingBottom="16dp">

            <ImageView android:id="@+id/ivLogo" android:layout_width="195dp" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginBottom="8dp" android:adjustViewBounds="true" android:maxHeight="120dp" android:scaleType="centerInside" />

            <!-- Navigation Items -->


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginBottom="32dp" android:text="@string/app_name" android:textColor="@color/text_high_emphasis" android:textSize="18sp" android:textStyle="bold" />

            <TextView android:id="@+id/nav_wallpaper" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Wallpaper Settings" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_gallery" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <TextView android:id="@+id/nav_clock" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Clock Customization" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_recent_history" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <TextView android:id="@+id/nav_preview" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Preview Clock &amp; Position" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_view" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <TextView android:id="@+id/nav_live_wallpaper" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Live Wallpaper" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_slideshow" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <TextView android:id="@+id/nav_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Available Wallpapers" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_manage" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <TextView android:id="@+id/nav_weather" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Weather Settings" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_compass" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <TextView android:id="@+id/nav_subscription" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/sidebar_selector" android:clickable="true" android:focusable="true" android:padding="16dp" android:text="Premium Subscription" android:textColor="@color/text_medium_emphasis" android:textSize="16sp" android:drawableStart="@android:drawable/ic_menu_my_calendar" android:drawablePadding="16dp" android:gravity="center_vertical" />

            <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:fontFamily="sans-serif-medium" android:gravity="center" android:padding="16dp" android:text="BY KrIsH Sodvadiya" android:textColor="@color/developer_name_grey" android:textSize="12sp" />



        </LinearLayout>
    </ScrollView>

    <!-- Right Content Area with AdView at bottom -->
    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7" android:orientation="vertical">

        <!-- Main Content -->

        <!-- Banner Ad (shown only for free users) -->

        <FrameLayout android:id="@+id/fragment_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" />

        <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center" android:visibility="gone" app:adSize="BANNER" app:adUnitId="@string/banner_ad_unit_id" />

    </LinearLayout>
</LinearLayout>
