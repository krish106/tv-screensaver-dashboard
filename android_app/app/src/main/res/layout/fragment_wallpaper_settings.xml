<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/background_dark" android:padding="32dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:text="Wallpaper Settings" android:textAppearance="@style/TextAppearance.Glance.Headline1" />

        <!-- Wallpaper Mode Section -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/bg_card_outlined" android:layout_marginBottom="24dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Wallpaper Mode" android:textAppearance="@style/TextAppearance.Glance.Headline2" />

            <LinearLayout android:id="@+id/layoutWallpaperMode" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                    <RadioButton android:id="@+id/rbLiveWallpaper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Live Wallpaper (Video)" android:textAppearance="@style/TextAppearance.Glance.Body1" android:textColor="@color/text_high_emphasis" android:buttonTint="@color/brand_orange" />
                    <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <ImageView android:layout_width="60dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_slideshow" android:scaleType="centerInside" android:background="@color/surface_dark" android:alpha="0.7"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <RadioButton android:id="@+id/rbStaticWallpaper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="Static Wallpaper (Images)" android:textAppearance="@style/TextAppearance.Glance.Body1" android:textColor="@color/text_high_emphasis" android:buttonTint="@color/brand_orange" />
                    <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <ImageView android:layout_width="60dp" android:layout_height="40dp" android:src="@android:drawable/ic_menu_gallery" android:scaleType="centerInside" android:background="@color/surface_dark" android:alpha="0.7"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Rotation Settings Section -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/bg_card_outlined" android:layout_marginBottom="24dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:text="Static Wallpaper Rotation" android:textAppearance="@style/TextAppearance.Glance.Headline2" android:textSize="20sp" />

            <RadioGroup android:id="@+id/rgMode" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:orientation="horizontal">
                <RadioButton android:id="@+id/rbStatic" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_weight="1" android:buttonTint="@color/brand_orange" android:text="Single Image" android:textAppearance="@style/TextAppearance.Glance.Body1" android:textColor="@color/text_high_emphasis" />
                <RadioButton android:id="@+id/rbRotating" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:buttonTint="@color/brand_orange" android:text="Rotate All" android:textAppearance="@style/TextAppearance.Glance.Body1" android:textColor="@color/text_high_emphasis" />
            </RadioGroup>

            <LinearLayout android:id="@+id/layoutInterval" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rotation Interval:" android:textColor="@color/secondary_blue" android:layout_marginEnd="16dp"/>
                <Spinner android:id="@+id/spinnerInterval" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/spinner_background" android:padding="8dp" android:minWidth="150dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Manage Wallpapers Section -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/bg_card_outlined" android:layout_marginBottom="24dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Manage Wallpapers" android:textAppearance="@style/TextAppearance.Glance.Headline2" />
            <Button android:id="@+id/btnManageWallpapers" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/btn_primary_selector" android:text="Manage &amp; Reorder Wallpapers" android:textColor="@color/btn_text_color_selector" />
        </LinearLayout>

        <!-- Import Section -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/bg_card_outlined" android:layout_marginBottom="24dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Add Wallpapers" android:textAppearance="@style/TextAppearance.Glance.Headline2" />
            <Button android:id="@+id/btnImportWallpapers" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/btn_primary_selector" android:text="Import &amp; Upload Wallpapers" android:textColor="@color/btn_text_color_selector" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
