<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_dark"/>
            <stroke android:width="2dp" android:color="@color/primary_gradient_start"/>
            <corners android:radius="8dp"/>
            <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_dark"/>
            <stroke android:width="1dp" android:color="@color/secondary_blue"/>
            <corners android:radius="8dp"/>
            <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_dark"/>
            <!-- Default state -->
            <stroke android:width="1dp" android:color="@color/cloud_grey"/>
            <corners android:radius="8dp"/>
            <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp"/>
        </shape>
    </item>
</selector>
